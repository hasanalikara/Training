@using abc.Entity;
@model IEnumerable<Product>
@{
    ViewBag.Title = "Index";
}
<div class="jumbotron">
    <h1 class="display-4">Hello, world!</h1>
    <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
    <hr class="my-4">
    <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
    <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
</div>


<div class="row">
    @foreach (var urun in Model)
    {
        
        <div class="col-md-4">

            <div class="card">
                @switch (urun.CategoryId)
                {
                    case 1:
                        <img src="~/theme/img/photo-camera.jpg" class="card-img-top" alt="@urun.Name" />
                        break;

                    case 2:
                        <img src="~/theme/img/bilgisayar.png" class="card-img-top" alt="@urun.Name" />
                        break;

                    case 3:
                        <img src="~/theme/img/elektronik.jpg" class="card-img-top" alt="@urun.Name" />
                        break;

                    case 4:
                        <img src="~/theme/img/telefon.jpg" class="card-img-top" alt="@urun.Name" />
                        break;

                    case 5:
                        <img src="~/theme/img/beyaz eşya.jpg" class="card-img-top" alt="@urun.Name" />
                        break;
                }
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="/Home/Details/@urun.Id"> @urun.Name</a>
                    </h5>
                    <p class="card-text">@urun.Description</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">
                        @urun.Price
                    </small>
                </div>
            </div>
        </div>

    }
</div>

   


